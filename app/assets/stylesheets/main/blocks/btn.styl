.b-btn
  display: inline-block;
  outline: none;
  border: none;
  cursor: pointer;

.b-btn__skin_success
  background: $color-green;
  color: #fff;

.b-btn__skin_danger
  background: $color-red;
  color: #fff;

.b-btn__skin_default
  background: #fff;
  color: $color-black;

.b-btn__size_s
  height: 26px;
  line-height: 26px;
  padding: 0 10px;
  font-size: 13px;

.b-btn__size_m
  height: 34px;
  line-height: 34px;
  padding: 0 15px;
  font-size: 14px;