.b-table
  width: 100%;
  background: #fff;
  box-shadow: $panel-shadow;

  th
    font-weight: 600;
    border-bottom: 1px solid $light-gray-color;
    text-align: left;

  td, th
    padding: 15px;

  tbody
    tr
      &:hover
        background: $light-gray-color;

    td
      &._actions
        a + a
          display: inline-block;
          margin-left: 10px;
