.b-table
  width: 100%;
  background: #fff;
  box-shadow: $panel-shadow;

  th
    font-weight: 600;
    border-bottom: 1px solid $color-light-gray;
    text-align: left;

  td, th
    padding: 15px;

  tbody
    tr
      &:hover
        background: $color-light-gray;

    td
      &._actions
        > *
          display: inline-block;
          margin-right: 10px;
